<?xml version="1.0" encoding="utf-8"?>
<!--TODO:roundrect命名待改-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_all_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/register_imageView"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="hey,  还没有账号?"
            android:textSize="24sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="快来注册吧~"
            android:layout_marginTop="10dp"
            android:textSize="24sp"/>
        <!--账号控件部分-->
        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_rect_2"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/login_head_img" />

            <EditText
                android:id="@+id/register_account_edt"
                android:layout_width="227dp"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:digits="@string/register_login_digits"
                android:elevation="10dp"
                android:focusable="true"
                android:hint="邮箱"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color_gray"
                android:textSize="15sp" />
        </LinearLayout>
        <!--第一次输入密码控件部分-->
        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="43dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">
            <!--TODO:password可能出现错误-->
            <EditText
                android:id="@+id/register_input_vertification_code_edt"
                android:layout_marginTop="33dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/round_rect_2"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:inputType="textPassword|numberPassword"
                android:hint="@string/input_vertification"
                android:textColorHint="@color/hint_color_gray"
                android:textColor="@color/black"
                android:singleLine="true"
                android:focusable="true"
                android:textSize="15sp"
                android:digits="@string/register_login_digits"
                android:layout_width="135dp"
                android:layout_height="43dp" />
            <Button
                android:id="@+id/register_get_vertification_code_bt"
                android:layout_width="130dp"
                android:layout_height="43dp"
                android:text="@string/get_verification"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/round_rect_1"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_rect_3"
            android:orientation="horizontal">
            <!--输入密码控件部分-->
            <ImageView
                android:id="@+id/register_lock_img"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:src="@drawable/login_lock_img" />

            <EditText
                android:id="@+id/register_password_edt"
                android:layout_width="184dp"
                android:layout_height="43dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/register_lock_img"
                android:background="@null"
                android:focusable="true"
                android:hint="@string/password"
                android:padding="3dp"
                android:paddingStart="15dp"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_color_gray"
                android:textSize="15sp" />
            <ImageView
                android:id="@+id/register_eye_img"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/register_password_edt"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/login_register_eye_close_img" />
        </RelativeLayout>
        <Button
            android:id="@+id/register_bt"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_rect_3"
            android:text="@string/register"
            android:textSize="30sp"
            />
        <!--随便看看，游客模式-->
        <Button
            android:id="@+id/register_visitor_mode_bt"
            android:textSize="25sp"
            android:text="@string/look_as_visitor"
            android:textColor="#F0F8FF"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
    </LinearLayout>


</LinearLayout>
